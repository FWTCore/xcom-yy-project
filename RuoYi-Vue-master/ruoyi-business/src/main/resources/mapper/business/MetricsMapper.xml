    <sql id="selectMetricsVO">
        select id,
               dept_id,
               project_id,
               biz_id,
               biz_key,
               metrics_name,
               metrics_type,
               biz_type,
               total_count,
               check_count,
               delete_flag,
               created_by_id,
               created_by_name,
               created_time,
               updated_by_id,
               updated_by_name,
               updated_time
        from metrics
    </sql>

    <select id="selectMetricsList" parameterType="com.ruoyi.business.domain.model.Metrics" resultMap="MetricsResult">
        <include refid="selectMetricsVO"/>
        <where>
            and delete_flag=0
            <if test="deptId != null ">
                and dept_id = #{deptId}
            </if>
            <if test="projectId != null ">
                and project_id = #{projectId}
            </if>
            <if test="bizId != null ">
                and biz_id = #{bizId}
            </if>
            <if test="bizKey != null  and bizKey != ''">
                and biz_key = #{bizKey}
            </if>
            <if test="metricsName != null  and metricsName != ''">
                and metrics_name like concat('%', #{metricsName}, '%')
            </if>
            <if test="metricsType != null ">
                and metrics_type = #{metricsType}
            </if>
            <if test="bizType != null ">
                and biz_type = #{bizType}
            </if>
            <if test="totalCount != null ">
                and total_count = #{totalCount}
            </if>
            <if test="checkCount != null ">
                and check_count = #{checkCount}
            </if>
            <if test="deleteFlag != null ">
                and delete_flag = #{deleteFlag}
            </if>
            <if test="createdById != null ">
                and created_by_id = #{createdById}
            </if>
            <if test="createdByName != null  and createdByName != ''">
                and created_by_name like concat('%', #{createdByName}, '%')
            </if>
            <if test="createdTime != null ">
                and created_time = #{createdTime}
            </if>
            <if test="updatedById != null ">
                and updated_by_id = #{updatedById}
            </if>
            <if test="updatedByName != null  and updatedByName != ''">
                and updated_by_name like concat('%', #{updatedByName}, '%')
            </if>
            <if test="updatedTime != null ">
                and updated_time = #{updatedTime}
            </if>
        </where>
    </select>

    <select id="selectMetricsById" parameterType="Long"
            resultMap="MetricsResult">
        <include refid="selectMetricsVO"/>
        where id = #{id}
        and delete_flag=0
    </select>
    <select id="selectMetricsByIds"
            resultMap="MetricsResult">
        <include refid="selectMetricsVO"/>
        where id in
        <foreach collection="ids" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
        and delete_flag=0
    </select>

