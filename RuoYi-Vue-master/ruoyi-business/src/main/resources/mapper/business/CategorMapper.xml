            </if>
            <if test="updatedByName != null">
                #{updatedByName},
            </if>
            <if test="updatedTime != null">
                #{updatedTime},
            </if>
        </trim>
    </insert>

    <update id="updateCategory" parameterType="com.ruoyi.business.domain.entity.CategoryDO">
        update category
        <trim prefix="SET" suffixOverrides=",">
            <if test="categoryName != null">
                category_name = #{categoryName},
            </if>
            <if test="hasBrand != null">
                has_brand = #{hasBrand},
            </if>
            <if test="hasMaterialName != null">
                has_material_name = #{hasMaterialName},
            </if>
            <if test="hasSpecification != null">
                has_specification = #{hasSpecification},
            </if>
            <if test="deleteFlag != null">
                delete_flag = #{deleteFlag},
            </if>
            <if test="createdById != null">
                created_by_id = #{createdById},
            </if>
            <if test="createdByName != null">
